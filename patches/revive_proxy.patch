+std::string quote(absl::string_view str) {
+  std::string result;
+  result.push_back('"');
+  for (size_t i = 0; i < str.size(); ++i) {
+    if ((str[i] == '"') || (str[i] == '\\'))
+      result.push_back('\\');
+    result.push_back(str[i]);
+  }
+  result.push_back('"');
+  return result;
+}
